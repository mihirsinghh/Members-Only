<html>
  <head>
    <title>Admin Login</title>
    <link rel="stylesheet" type="text/css" href="/css/adminPage.css">
  </head>
  <body>
    <nav>
      <div id = "navbar-container">
        <a href = "/">Home</a>
        <div class = "mini-navbar-container">
            <p> Viewing as : <%= user %> </p>
            <form id="logout-form" action="/log-out" method="POST">
              <button type="submit">Log out</button>
            </form>
        </div>
      </div>
    </nav>
    <div id = "main-container">
      <p>Enter admin passcode to login as admin</p>
      <form action = "validate-admin" method = "POST">
          <label for = "adminpasscode"> Admin passcode: </label>
          <input type = "text" id = "adminpasscode" name = "adminpasscode">
          <input type = "submit" value = "Submit">
      </form>
      <% if (error === 'incorrect') { %>
        <p style="color: red; margin-top: 10px;">Incorrect passcode</p>
      <% } %>
    </div>
  </body>
</html>
